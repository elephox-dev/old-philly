{
  "name": "ricardoboss/philly",
  "description": "Another PHP framework",
  "type": "library",
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "psr/container": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "vimeo/psalm": "^4.3",
    "infection/infection": "^0.18"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Ricardo Boss",
      "email": "contact@ricardoboss.de"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Philly\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "test\\Philly\\": "test"
    }
  },
  "bin": [
    "bin/philly.php"
  ],
  "scripts": {
    "test": "phpunit --configuration=phpunit.xml.dist --coverage-text",
    "stan": "psalm --config=psalm.xml.dist --output-format=github --shepherd",
    "infect": "infection --configuration=infection.json.dist --no-progress"
  }
}
